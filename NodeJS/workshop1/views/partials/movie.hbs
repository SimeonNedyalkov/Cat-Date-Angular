<div class="flip flip-vertical">
    <div class="front">
        <img src={{imageURL}}
            alt={{name}}>
    </div>
    <div class="back">
        <h1>{{name}}</h1>
        <h2>Genre: {{genre}}</h2>
        <p>Description: {{description}}</p>
        <a href="/details/{{id}}" class="details">Details</a>
    </div>
</div>